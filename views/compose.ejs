<%- include('partials/header'); %>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group" />
    <label class="form-label" for="blogTitle">Title</label>
    <input class="form-control" type="text" name="blogTitle" id="blogTitle" autofocus>
  
    <label class="form-label" for="blogPost">Post</label>
    <textarea class="form-control" name="blogPost" id="blogPost" rows="8" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>


